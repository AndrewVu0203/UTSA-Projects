package Assignment4;
import package.FuelGauge;

public class a4main {
  
  public static void main(String[] args) {
    
    a4main a4mainInstance = new a4main();
    
    FuelGauge fuel = a4mainInstance.new FuelGauge();
    Odometer odometer = a4mainInstance.new Odometer(0, fuel);
    
    for (int x = 0; x < FuelGauge.MAXIMUM_GALLONS; x++) {
      fuel.addGallons();
    }
    
    // dive until you can't drive no longer.
    while (fuel.getGallons() > 0) {
      
      // add mile driven
      odometer.addMileage();
      
      // Display the mileage.
      System.out.println("Mileage: " + odometer.getMileage());
      
      // Display the amount of fuel.
      System.out.println("Fuel level: " + fuel.getGallons() + " gallons");
      System.out.println("------------------------------");
    }
  }
  
}
